//*********************************************************
// HTML Element Styles
//*********************************************************
body
  color white
  font-size 13px
  font-family Helvetica, Verdana, Arial, sans-serif
  background #DDD
  margin 0px
  
ul
  list-style none
  
img
  display block
  margin 10px auto 0px auto
  -webkit-box-reflect below 4px -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(0.7, transparent), to(white))
  -webkit-border-radius 5px  
  border-radius 5px  
  
a
  color #555
  text-decoration none
  
a:hover
  color #a93961
  text-decoration underline

//*********************************************************
// Div Styles
//*********************************************************
#header
  color #333
  text-align center
  font-size 3em
  font-family default-font, Helvetica, Verdana, Arial, sans-serif
  border-bottom 1px solid #CCC
  background rgb(252,252,252)
  background -moz-linear-gradient(top,  rgba(252,252,252,.8) 0%, rgba(216,216,216,.8) 50%, rgba(196,196,196,1) 51%, rgba(242,242,242,.8) 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(252,252,252,.8)), color-stop(50%,rgba(216,216,216,.8)), color-stop(51%,rgba(196,196,196,.8)), color-stop(100%,rgba(242,242,242,.8)))
  background -webkit-linear-gradient(top,  rgba(252,252,252,.8) 0%,rgba(216,216,216,.8) 50%,rgba(196,196,196,.8) 51%,rgba(242,242,242,.8) 100%)
  background -o-linear-gradient(top,  rgba(252,252,252,.8) 0%,rgba(216,216,216,.8) 50%,rgba(196,196,196,.8) 51%,rgba(242,242,242,.8) 100%)
  background -ms-linear-gradient(top,  rgba(252,252,252,.8) 0%,rgba(216,216,216,.8) 50%,rgba(196,196,196,.8) 51%,rgba(242,242,242,.8) 100%)
  background linear-gradient(top,  rgba(252,252,252,.8) 0%,rgba(216,216,216,.8) 50%,rgba(196,196,196,.8) 51%,rgba(242,242,242,.8) 100%)
  text-shadow 1px 1px 1px #FFF
  width 100%
  margin 0px auto 0px auto
  padding 20px 10px 12px 10px
  top 0px
  position fixed
  z-index 1000

#mainContent
  padding 10px
  margin-top 85px
  
.overflowHidden
  overflow hidden
  
#grid
  width 820px
  margin 10px auto 0px auto
  overflow scroll
  clear both

.row
  overflow hidden
  
.cell
	float left
	padding 5px
	overflow hidden
	white-space nowrap

.note
  color black
  background-image url(../i/note.png)
  background-repeat no-repeat
  padding 10px 0px 0px 10px
  width 390px
  height 370px
  position relative
  
.wrapper
  position relative
.bottom
  position absolute
  bottom 35px

#footer 
  color white
  font-size 10px
  font-family Helvetica, Verdana, Arial, sans-serif
  background -moz-linear-gradient(bottom,  rgba(0,0,0,0.65) 0%, rgba(0,0,0,0) 100%)
  background -webkit-gradient(linear, left bottom, left top, color-stop(0%,rgba(0,0,0,0.65)), color-stop(100%,rgba(0,0,0,0)))
  background -webkit-linear-gradient(bottom,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
  background -o-linear-gradient(bottom,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
  background -ms-linear-gradient(bottom,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
  background linear-gradient(bottom,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%)
  width 100%
  height 35px
  margin-top 0px
  margin-left auto
  margin-right auto
  padding-left 10px
  padding-right 10px
  padding-top 20px
  position fixed
  bottom 0px
  z-index 1000

#sectionHeader 
  font-family Helvetica, Verdana, Arial, sans-serif
  font-size 15px
  padding 5px
  margin-bottom 10px
  width 250px
  text-shadow 2px 2px 2px #000
  filter dropshadow(color=#000, offx=2, offy=2)
  background -moz-linear-gradient(left,  rgba(255,255,255,0.55) 0%, rgba(255,255,255,0) 100%)
  background -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(255,255,255,0.55)), color-stop(100%,rgba(255,255,255,0)))
  background -webkit-linear-gradient(left,  rgba(255,255,255,0.55) 0%,rgba(255,255,255,0) 100%)
  background -o-linear-gradient(left,  rgba(255,255,255,0.55) 0%,rgba(255,255,255,0) 100%)
  background -ms-linear-gradient(left,  rgba(255,255,255,0.55) 0%,rgba(255,255,255,0) 100%)
  background linear-gradient(left,  rgba(255,255,255,0.55) 0%,rgba(255,255,255,0) 100%)
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px

//*********************************************************
// Text Styles
//*********************************************************

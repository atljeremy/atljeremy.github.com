  color #282828
  text-align center
  font-family default-font, Helvetica, Verdana, Arial, sans-serif
  font-size 6em
  margin 5px auto -12px auto
  text-shadow 0px 1px 0px #FFF

h2
  color #282828
  text-align center
  font-family default-font, Helvetica, Verdana, Arial, sans-serif
  font-size 3em
  margin 5px auto -12px auto
  text-shadow 0px 1px 0px #FFF
  
underline
  text-decoration underline
  
blue
  color #449
red
  color #99221f
pink
  color #a93961
green
  color #3e9944
purple
  color #7644a7 